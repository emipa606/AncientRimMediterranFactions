          <thingDef>Bow_Short</thingDef>
          <allowRoofed>True</allowRoofed>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>AR_Lance</thingDef>
          <stuff>AR_Bronze</stuff>
          <count>1</count>
          <allowRoofed>True</allowRoofed>
        </li>
        <li Class="ScenPart_ScatterThingsAnywhere">
          <def>ScatterThingsAnywhere</def>
          <thingDef>AR_Bronze</thingDef>
